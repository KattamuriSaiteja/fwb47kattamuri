extends layout

block content
  h1= title
  p Earphone results
  div(class="container-fluid")
        div(class="row")
            -
                let mattress = [
                    {
                        "brand": "centuary",
                        "earbudsModel": "cotton",
                        "jackMM": 1
                    },
                    {
                        "brand": "sleepwell",
                        "earbudsModel": "cotton",
                        "jackMM": 2
                    },
                    {
                        "brand": "relaxo",
                        "earbudsModel": "cotton",
                        "jackMM": 3
                    },                   
                ]
            each v,index in mattress
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.earbudsModel}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.jackMM}

                script.                
                      function buy(intemNo)
                      {
                            alert(`you purchased Item ${intemNo+1}`)
                      }